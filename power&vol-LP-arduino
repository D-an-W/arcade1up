// Arduino code the the Arcade 1UP switches
// use a SPST switch (non momentary) to act like a momentary switch
// if detected pin change use pin 13 to power-up with LattePanda Alpha
// use the SPDT switch to change the volume from Mute to 70% to 96% depending on button state

// this constant won't change:
const byte buttonPin = 8;    // the pin that the switch button is attached to
const byte volPin1 = 20;      // the volume switch state pin 1
const byte volPin2 = 21;      // the volume switch state pin 2
const byte outPin = 13;       // the pin that the power switch is attached to (LED)
// Variables will change:
boolean buttonState = 0;         // current state of the power switch
boolean volumeState1 = 0;     // current state of the pin 1 volume switch
boolean volumeState2 = 0;     // current state of the pin 2 volume switch
boolean lastButtonState = 0;     // previous state of the power switch
boolean lastVolumeState = 0;     // previous state of the volume switch

void setup()
{
   // initialize the button pin as a input
   pinMode(buttonPin, INPUT);
   // initialize the colume pins as input accordingly
   pinMode(volumePin1, INPUT_PULLUP);
   pinMode(volumePin2, INPUT);
   // initialize the LED as an output:
   pinMode(outPin, OUTPUT);
   // initialize serial communication:
   Serial.begin(9600);
}

void loop()
{
   // read the switches input pins:
   buttonState = digitalRead(buttonPin);
   volumeState1 = digitalRead(volPin1);
   volumeState2 = digitalRead(volPin2);
   // compare the buttonState to its previous state
   if (buttonState != lastButtonState)
   {
      // if the state has changed, increment the counter
      if (buttonState == HIGH)
      {
         // if the current state is HIGH then the button
         // went from off to on:
         Serial.println("ON");
         digitalWrite(outPin, HIGH);
         // delay for half a second & then set back to low
         delay(500);
         digitalWrite(outPin, LOW);
         // save the current state as the last state,
         //for next time through the loop
         lastButtonState = buttonState;
      }
      else
      {
         if (buttonState == LOW && lastButtonState == 0)
         {
            // Do nothing but a little delay
            // Inital power on state
            delay(500);
         }
         else
         {
            // if the current state is LOW then the button
            // went from on to off:
            Serial.println("OFF");
            digitalWrite(outPin, HIGH);
            // delay for half a second & then set back to low
            delay(500);
            digitalWrite(outPin, LOW);
            // save the current state as the last state,
            //for next time through the loop
            lastButtonState = buttonState;
        }
      }
   }
   if (lastVolumeState != 0)
   {
      if (volumeState1 == LOW && volumeState2 == LOW)
      {
         Serial.pintln("HIGH");
         lastVolumeState = 96;
         delay(500);
      }
      if (volumeState1 == HIGH && volumeState2 == LOW)
      {
         Serial.pintln("MEDIUM");
         lastVolumeState = 70;
         delay(500);
      }
   }
   else
   {
      Serial.println("MUTE");
      delay(500);
   }
}
